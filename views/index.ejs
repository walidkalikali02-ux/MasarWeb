<!DOCTYPE html>
<html lang="<%= currentLang %>" dir="<%= dir %>">
<%- include('partials/head') %>
<body class="homepage">
    <%- include('partials/navbar') %>

    <div class="container">
        <header class="main-header">
            <div class="logo">
                <img src="/static/images/logo.svg" alt="<%= t.title %>" class="main-logo">
            </div>
            <p class="tagline"><%= t.tagline %></p>
        </header>

        <main class="main-content">
            <div class="search-container">
                <form action="/browse" method="POST" class="url-form">
                    <div class="input-group">
                        <input 
                            type="url" 
                            name="url" 
                            id="url-input"
                            class="url-input"
                            placeholder="<%= t.placeholder %>"
                            value="<%= currentUrl || '' %>"
                            autocomplete="off"
                            required
                        >
                        <button type="submit" class="browse-btn">
                            <span><%= t.browse %></span>
                            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="11" cy="11" r="8"/>
                                <path d="m21 21-4.35-4.35"/>
                            </svg>
                        </button>
                    </div>
                </form>

                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="error-message">
                        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10"/>
                            <line x1="12" y1="8" x2="12" y2="12"/>
                            <line x1="12" y1="16" x2="12.01" y2="16"/>
                        </svg>
                        <span><%= error %></span>
                    </div>
                <% } %>
            </div>

            <div class="features">
                <h2><%= t.features_title %></h2>
                <div class="features-grid">
                    <div class="feature-card">
                        <div class="feature-icon">üîí</div>
                        <h3><%= t.privacy_title %></h3>
                        <p><%= t.privacy_desc %></p>
                    </div>
                    <div class="feature-card">
                        <div class="feature-icon">üöÄ</div>
                        <h3><%= t.speed_title %></h3>
                        <p><%= t.speed_desc %></p>
                    </div>
                    <div class="feature-card">
                        <div class="feature-icon">üõ°Ô∏è</div>
                        <h3><%= t.protection_title %></h3>
                        <p><%= t.protection_desc %></p>
                    </div>
                    <div class="feature-card">
                        <div class="feature-icon">üì±</div>
                        <h3><%= t.devices_title %></h3>
                        <p><%= t.devices_desc %></p>
                    </div>
                    <div class="feature-card">
                        <div class="feature-icon">üîê</div>
                        <h3><%= t.encryption_title %></h3>
                        <p><%= t.encryption_desc %></p>
                    </div>
                    <div class="feature-card">
                        <div class="feature-icon">üåç</div>
                        <h3><%= t.support_title %></h3>
                        <p><%= t.support_desc %></p>
                    </div>
                </div>
            </div>

            <div class="how-it-works">
                <h2><%= t.how_it_works_title %></h2>
                <div class="steps">
                    <div class="step">
                        <div class="step-number">1</div>
                        <p><%= t.step1 %></p>
                    </div>
                    <div class="step-arrow">‚Üí</div>
                    <div class="step">
                        <div class="step-number">2</div>
                        <p><%= t.step2 %></p>
                    </div>
                    <div class="step-arrow">‚Üí</div>
                    <div class="step">
                        <div class="step-number">3</div>
                        <p><%= t.step3 %></p>
                    </div>
                </div>
            </div>

            <% if (t.why_use_title) { %>
            <div class="info-section why-use">
                <h2><%= t.why_use_title %></h2>
                <div class="info-grid">
                    <% t.why_use_items.forEach(function(item) { %>
                        <div class="info-card">
                            <h3><%= item.title %></h3>
                            <p><%= item.desc %></p>
                        </div>
                    <% }); %>
                </div>
            </div>
            <% } %>

            <% if (t.how_proxy_works_title) { %>
            <div class="info-section how-proxy-works">
                <h2><%= t.how_proxy_works_title %></h2>
                <div class="text-content">
                    <p><%= t.how_proxy_works_desc %></p>
                </div>
            </div>
            <% } %>

            <% if (t.security_privacy_title) { %>
            <div class="info-section security-privacy">
                <h2><%= t.security_privacy_title %></h2>
                <div class="security-grid">
                    <% t.security_privacy_items.forEach(function(item) { %>
                        <div class="security-card">
                            <div class="security-icon"><%= item.icon %></div>
                            <h3><%= item.title %></h3>
                            <p><%= item.desc %></p>
                        </div>
                    <% }); %>
                </div>
            </div>
            <% } %>

            <% if (t.use_cases_title) { %>
            <div class="info-section use-cases">
                <h2><%= t.use_cases_title %></h2>
                <ul class="use-cases-list">
                    <% t.use_cases_items.forEach(function(item) { %>
                        <li>
                            <span class="check-icon">‚úì</span>
                            <span><%= item %></span>
                        </li>
                    <% }); %>
                </ul>
            </div>
            <% } %>

            <% if (t.faq_title) { %>
            <div class="info-section faq-section">
                <h2><%= t.faq_title %></h2>
                <div class="faq-grid">
                    <% t.faq_items.forEach(function(item) { %>
                        <div class="faq-item">
                            <div class="faq-question"><%= item.q %></div>
                            <div class="faq-answer"><%= item.a %></div>
                        </div>
                    <% }); %>
                </div>
            </div>
            <% } %>

            <div class="popular-sites">
                <h2><%= t.popular_sites_title %></h2>
                <div class="sites-grid">
                    <% if (t.popular_sites && t.popular_sites.length > 0) { %>
                        <% t.popular_sites.forEach(function(site) { %>
                            <a href="#" onclick="event.preventDefault(); document.getElementById('url-input').value='<%= site.url %>'; document.querySelector('.url-form').submit();" class="site-btn">
                                <span><%= site.icon %></span> <%= site.name %>
                            </a>
                        <% }); %>
                    <% } %>
                </div>
            </div>
        </main>
    </div>

    <%- include('partials/footer') %>

    <script>
        // Auto-focus on input
        document.getElementById('url-input').focus();
        
        // Handle form submission
        document.querySelector('.url-form').addEventListener('submit', function(e) {
            const input = document.getElementById('url-input');
            if (!input.value.trim()) {
                e.preventDefault();
                input.focus();
            }
        });
    </script>
</body>
</html>