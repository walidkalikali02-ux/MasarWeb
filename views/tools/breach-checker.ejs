<script>
    // Password Breach Checker Logic
    document.addEventListener('DOMContentLoaded', () => {
        const emailInput = document.getElementById('emailInput');
        const passwordInput = document.getElementById('passwordInput');
        const checkBtn = document.getElementById('checkBtn');
        const statusDisplay = document.getElementById('statusDisplay');
        const breachResults = document.getElementById('breachResults');
        const breachList = document.getElementById('breachList');
        const sensitivityRating = document.getElementById('sensitivityRating');
        const totalBreaches = document.getElementById('totalBreaches');
        const dataTypes = document.getElementById('dataTypes');

        // Simulated breach database (in production, this would query HIBP API)
        const simulatedBreaches = [
            {
                name: "LinkedIn (2012)",
                date: "May 2012",
                description: "164 million user accounts compromised",
                dataClasses: ["Email addresses", "Passwords", "Usernames"],
                sensitivity: "high"
            },
            {
                name: "Dropbox (2012)",
                date: "July 2012",
                description: "68 million user credentials exposed",
                dataClasses: ["Email addresses", "Passwords"],
                sensitivity: "high"
            },
            {
                name: "Adobe (2013)",
                date: "October 2013",
                description: "153 million user records breached",
                dataClasses: ["Email addresses", "Passwords", "Password hints"],
                sensitivity: "medium"
            },
            {
                name: "Canva (2019)",
                date: "May 2019",
                description: "137 million user accounts affected",
                dataClasses: ["Email addresses", "Names", "Locations"],
                sensitivity: "medium"
            },
            {
                name: "MyFitnessPal (2018)",
                date: "February 2018",
                description: "150 million user accounts compromised",
                dataClasses: ["Email addresses", "Passwords", "Usernames"],
                sensitivity: "high"
            }
        ];

        // Check for breaches
        checkBtn.addEventListener('click', async () => {
            const email = emailInput.value.trim();
            const password = passwordInput.value;

            if (!email && !password) {
                alert('Please enter an email address or password to check');
                return;
            }

            // Show loading state
            statusDisplay.textContent = 'Checking...';
            statusDisplay.className = '';
            breachResults.style.display = 'none';

            // Simulate API delay
            await new Promise(resolve => setTimeout(resolve, 1500));

            // Simulate breach detection (deterministic based on input)
            const emailHash = hashString(email || password);
            const hasBreaches = emailHash % 3 !== 0; // 2/3 chance of finding breaches for demo

            if (hasBreaches) {
                displayBreaches();
            } else {
                displaySafe();
            }
        });

        function hashString(str) {
            let hash = 0;
            for (let i = 0; i < str.length; i++) {
                const char = str.charCodeAt(i);
                hash = ((hash << 5) - hash) + char;
                hash = hash & hash;
            }
            return Math.abs(hash);
        }

        function displaySafe() {
            statusDisplay.textContent = '✓ Good news — no pwnage found!';
            statusDisplay.className = 'status-safe';
            breachResults.style.display = 'none';
        }

        function displayBreaches() {
            statusDisplay.textContent = '⚠ Oh no — pwned!';
            statusDisplay.className = 'status-pwned';

            // Select random subset of breaches
            const numBreaches = Math.floor(Math.random() * 3) + 1;
            const selectedBreaches = simulatedBreaches
                .sort(() => 0.5 - Math.random())
                .slice(0, numBreaches);

            // Render breach list
            breachList.innerHTML = selectedBreaches.map(breach => `
                <div class="breach-item">
                    <div class="breach-name">${breach.name}</div>
                    <div class="breach-date">${breach.date}</div>
                    <p style="margin: 0.5rem 0; color: var(--text-light);">${breach.description}</p>
                    <div class="data-types">
                        ${breach.dataClasses.map(type => `<span class="data-tag">${type}</span>`).join('')}
                    </div>
                </div>
            `).join('');

            // Calculate overall sensitivity
            const maxSensitivity = selectedBreaches.reduce((max, breach) => {
                const levels = { low: 1, medium: 2, high: 3 };
                return levels[breach.sensitivity] > levels[max] ? breach.sensitivity : max;
            }, 'low');

            sensitivityRating.textContent = maxSensitivity.charAt(0).toUpperCase() + maxSensitivity.slice(1);
            sensitivityRating.className = `sensitivity-rating sensitivity-${maxSensitivity}`;

            // Calculate unique data types
            const allDataTypes = [...new Set(selectedBreaches.flatMap(b => b.dataClasses))];
            dataTypes.innerHTML = allDataTypes.map(type => `<span class="data-tag">${type}</span>`).join('');

            totalBreaches.textContent = numBreaches;
            breachResults.style.display = 'block';
        }
    });
</script>

