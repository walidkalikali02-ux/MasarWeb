<!DOCTYPE html>
<html lang="<%= currentLang %>" dir="<%= dir %>">
<%- include('partials/head', { pageTitle: t.support_page.title + ' - ' + t.title }) %>
<body>
    <%- include('partials/navbar') %>

    <div class="container">
        <main class="content-page">
            <h2><%= t.support_page.title %></h2>
            <p><%= t.support_page.desc %></p>
            
            <div class="contact-info">
                <h3><%= t.support_page.contact_info %></h3>
                <p><i class="fas fa-envelope"></i> support@masarweb.com</p>
            </div>

            <form class="contact-form" onsubmit="event.preventDefault(); alert('Message sent!');">
                <div class="form-group">
                    <label><%= t.support_page.form_name %></label>
                    <input type="text" required>
                </div>
                <div class="form-group">
                    <label><%= t.support_page.form_email %></label>
                    <input type="email" required>
                </div>
                <div class="form-group">
                    <label><%= t.support_page.form_message %></label>
                    <textarea required></textarea>
                </div>
                <button type="submit" class="btn"><%= t.support_page.form_send %></button>
            </form>
            
            <a href="/" class="back-link"><i class="fas fa-arrow-left"></i> <%= t.error.back_home %></a>
        </main>
    </div>

    <%- include('partials/footer') %>
</body>
</html>